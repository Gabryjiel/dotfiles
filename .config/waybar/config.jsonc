{
  "layer": "top",
  "modules-left": ["cpu", "memory", "disk", "hyprland/workspaces"],
  "modules-center": ["hyprland/window", "hyprland/submap"],
  "modules-right": [
    "tray",
    "backlight",
    "wireplumber",
    "clock",
    "network",
    "custom/launcher",
    "custom/power",
  ],

  "hyprland/workspaces": {
    "format": "{id}",
    "format-icons": {
      "urgent": "ÔÅ™",
      "active": "ÔÑë", // focused workspace on current monitor
      "visible": "ÔÑë", // focused workspace on other monitors
      "default": "ÔÑå",
      "empty": "ÔÑå", // persistent (created by this plugin)
    },
    "all-outputs": false, // recommended
  },

  "hyprland/window": {
    "separate-outputs": true,
    "format": "{title}",
    "rewrite": {
      "(.*) - Brave": "Brave Browser",
    },
  },

  "wireplumber": {
    "tooltip": false,
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ùü",
    "format-icons": ["ÔÄ¶", "ÔÄß", "ÔÄ® "],
    "on-click": "hyprctl dispatch -- exec [float] uwsm app -- pwvucontrol",
    "on-click-right": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
  },

  "river/tags": {
    "num-tags": 6,
  },
  "network": {
    "format-wifi": "Ôá´  {essid}",
    "format-ethernet": "Ôá´ ",
    "format-disconnected": "Û∞ñ™ ",
    "tooltip-format": "{ifname} via {gwaddr}",
    "tooltip-format-ethernet": "{ifname}",
    "tooltip-format-disconnected": "Disconnected",
  },
  "backlight": {
    "tooltip": false,
    "format": "ÔÉ´ {}%",
    "interval": 1,
    "on-scroll-up": "light -A 5",
    "on-scroll-down": "light -U 5",
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20,
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
  },
  "tray": {
    "show-passive-items": true,
    "icon-size": 18,
    "spacing": 10,
  },
  "clock": {
    "format": "ÔÄó  {:%H:%M %d.%m.%Y}",
    "actions": {
      "on-click-right": "mode",
    },
  },
  "cpu": {
    "interval": 15,
    "format": "Û∞ª† {}%",
    "max-length": 10,
    "on-click": "hyprctl dispatch -- exec [float] uwsm app -- kitty htop",
  },
  "memory": {
    "interval": 30,
    "format": "Û∞çõ {}%",
    "max-length": 10,
  },
  "disk": {
    "interval": 30,
    "format": "üñ¥ {}%",
    "max-length": 10,
  },
  "custom/media": {
    "interval": 30,
    "format": "{icon} {}",
    "return-type": "json",
    "max-length": 20,
    "format-icons": {
      "spotify": "ÔÜº ",
      "default": "Ô¢Ö ",
    },
    "escape": true,
    "exec": "$HOME/.config/system_scripts/mediaplayer.py 2> /dev/null",
    "on-click": "playerctl play-pause",
  },
  "custom/launcher": {
    "format": "ÔåÉ ",
    "on-click": "rofi -show drun",
    "on-click-right": "killall rofi",
    "tooltip-format": "Launch rofi",
  },
  "custom/power": {
    "format": "‚èª",
    "on-click": "bash ~/.config/scripts/power.sh",
    "tooltip": true,
    "tooltip-format": "Quit system",
  },
  "custom/updates": {
    "format": "{} Update(s)",
    "exec": "checkupdates | wc -l",
    "exec-if": "[[ $(checkupdates | wc -l) != 0 ]]",
    "interval": 15,
    "on-click": "alacritty -e paru -Syu && notify-send 'The system has been updated' ",
  },
  "custom/wallpaper": {
    "format": "ÔÄæ ",
    "on-click": "bash ~/.config/system_scripts/pkill_bc",
  },
}
